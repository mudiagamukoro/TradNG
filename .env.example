# Database configuration
DB_SERVER=tradng.database.windows.net
DB_NAME=TradNG
DB_USERNAME=your_username
DB_PASSWORD=your_password
DB_DRIVER=ODBC Driver 17 for SQL Server

# API configuration
HUGGINGFACE_KEY=your_huggingface_key
YAHOO_FINANCE_RATE_LIMIT=2000
YAHOO_FINANCE_PERIOD=1y
YAHOO_FINANCE_INTERVAL=1d

# Email configuration
SMTP_SERVER=localhost
SMTP_PORT=25
SMTP_SENDER_EMAIL=no-reply@tradng.ai
NOTIFICATION_EMAIL=your_email@example.com

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=agentic_ai.log
LOG_FORMAT=%(asctime)s %(levelname)s %(message)s

# AI configuration
LLM_MODEL=meta-llama/Llama-2-7b-chat-hf
MAX_RETRIES=3
RETRY_DELAY=5

# Environment
ENV=development 